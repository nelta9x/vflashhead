{
  "screen": {
    "width": 1280,
    "height": 720
  },
  "defaultLanguage": "en",
  "player": {
    "initialHp": 5,
    "cursorHitbox": {
      "baseRadius": 30
    },
    "cursorColor": "#f0f8ff",
    "cursorColorNumeric": 15792383
  },
  "upgradeUI": {
    "boxWidth": 300,
    "boxHeight": 400,
    "boxSpacing": 45,
    "hoverDuration": 1000,
    "boxYOffset": 220
  },
  "waveTransition": {
    "countdownDuration": 3000
  },
  "waveCountdownUI": {
    "label": {
      "fontSize": 24,
      "yOffset": -60,
      "color": "white"
    },
    "number": {
      "fontSize": 120,
      "yOffset": 20,
      "color": "cyan",
      "stroke": "darkCyan",
      "strokeThickness": 4,
      "goColor": "green"
    }
  },
  "hud": {
    "timerColors": {
      "default": "green",
      "mid": "brightGreen",
      "high": "cyan",
      "ultra": "yellow"
    },
    "timerThresholds": {
      "mid": 60000,
      "high": 120000,
      "ultra": 180000
    },
    "hpDisplay": {
      "startX": 20,
      "startY": 25,
      "spacing": 35,
      "heartSize": 12,
      "filledColor": "red",
      "emptyColor": "#333333"
    }
  },
  "gameOver": {
    "title": {
      "y": 120,
      "fontSize": 72,
      "color": "brightRed"
    },
    "stats": {
      "y": 330,
      "labelFontSize": 20,
      "valueFontSize": 32,
      "timeLabelFontSize": 24,
      "timeValueFontSize": 48,
      "comboValueFontSize": 28,
      "badgeFontSize": 14
    },
    "prompt": {
      "yOffset": 100,
      "fontSize": 28
    }
  },
  "monsterAttack": {
    "laser": {
      "width": 40,
      "warningDuration": 1500,
      "fireDuration": 370,
      "minInterval": 5000,
      "maxInterval": 10000,
      "damage": 1,
      "color": "#ff0000",
      "warningAlpha": 0.3,
      "fireAlpha": 0.8,
      "trajectory": {
        "minDistanceRatio": 0.7,
        "spawnPadding": -100
      },
      "bonus": {
        "comboAmount": 1,
        "invincibilityDuration": 500
      },
      "visual": {
        "sparkSegments": 8,
        "sparkCount": 2
      }
    }
  },
  "fonts": {
    "main": "'Orbitron', 'Black Han Sans', sans-serif",
    "korean": "'Black Han Sans', 'Orbitron', sans-serif"
  },
  "render": {
    "pixelArt": false,
    "antialias": true
  },
  "textSettings": {
    "resolution": 2,
    "upgradeUI": {
      "nameSize": 24,
      "descSize": 18
    },
    "hud": {
      "waveSize": 16,
      "timerSize": 24,
      "feverSize": 32,
      "completeSize": 36,
      "strokeThickness": 1.5,
      "timerStrokeThickness": 2
    }
  },
  "playerAttack": {
    "baseMissileCount": 1,
    "baseMissileDamage": 100
  },
  "magnet": {
    "minPullDistance": 30
  },
  "gameGrid": {
    "size": 60,
    "speed": 0.15,
    "alpha": 0.12,
    "color": "#00ffff",
    "depth": -1,
    "lineWidth": 1.5,
    "horizonRatio": 0.6,
    "verticalLines": 150,
    "horizontalLines": 15
  },
  "stars": {
    "count": 60,
    "minSize": 0.3,
    "maxSize": 1.5,
    "parallaxRatio": 0.1,
    "sizeSpeedFactor": 0.4,
    "twinkleSpeedMin": 0.0005,
    "twinkleSpeedMax": 0.0015,
    "verticalLimitRatio": 1.0
  },
  "audio": {
    "bgm": {
      "key": "bgm",
      "path": "assets/audio/neon-drive.mp3",
      "volume": 0.15
    },
    "upgrade_selected": {
      "key": "upgrade_selected",
      "path": "assets/audio/upgrade_selected.wav",
      "volume": 0.2,
      "synth": {
        "notes": [196, 247, 294, 392, 494, 587, 784, 988, 1175, 1568],
        "noteDuration": 0.06,
        "waveType": "square",
        "gain": 0.1
      }
    },
    "destroy_basic": { "key": "destroy_basic", "path": "assets/audio/destroy_basic.wav", "volume": 0.35 },
    "destroy_golden": { "key": "destroy_golden", "path": "assets/audio/destroy_golden.wav", "volume": 0.35 },
    "destroy_crystal": { "key": "destroy_crystal", "path": "assets/audio/destroy_crystal.wav", "volume": 0.35 },
    "destroy_bomb": { "key": "destroy_bomb", "path": "assets/audio/destroy_bomb.wav", "volume": 0.45 },
    "hit": { "key": "hit", "path": "assets/audio/hit.wav", "volume": 0.35 },
    "miss": { "key": "miss", "path": "assets/audio/miss.wav", "volume": 0.25 },
    "heal": { "key": "heal", "path": "assets/audio/heal.wav", "volume": 0.4 },
    "player_charge": { "key": "player_charge", "path": "assets/audio/player_charge.wav", "volume": 0.1 },
    "boss_charge": { "key": "boss_charge", "path": "assets/audio/boss_charge.wav", "volume": 0.35 },
    "boss_fire": { "key": "boss_fire", "path": "assets/audio/boss_fire.wav", "volume": 0.45 },
    "boss_impact": { "key": "boss_impact", "path": "assets/audio/boss_impact.wav", "volume": 0.5 }
  },
  "boot": {
    "progressBar": {
      "width": 320,
      "height": 50,
      "innerPadding": 10,
      "color": "cyan"
    },
    "loadingText": {
      "yOffset": 50,
      "fontSize": 24,
      "color": "cyan"
    }
  }
}
